{
  "kind": "collectionType",
  "collectionName": "artworks",
  "info": {
    "singularName": "artwork",
    "pluralName": "artworks",
    "displayName": "Artwork",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "art_title": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "art_title"
    },
    "art_description": {
      "type": "richtext"
    },
    "art_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "model3D": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "exhibition": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::exhibition.exhibition",
      "inversedBy": "artworks"
    },
    "artist": {
      "type": "string"
    },
    "saleStatus": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "onSale",
        "notForSale",
        "sold"
      ]
    },
    "price": {
      "type": "decimal",
      "conditions": {
        "visible": {
          "==": [
            {
              "var": "saleStatus"
            },
            "onSale"
          ]
        }
      },
      "required": true
    }
  }
}
